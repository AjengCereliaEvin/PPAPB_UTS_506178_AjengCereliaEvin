<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_page"
    tools:context=".WelcomeActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="313dp"
        android:layout_height="232dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="79dp"
        android:text="Selamat Datang di Aplikasi Monitoring Diet. Kami hadir untuk membantu Anda dalam perjalanan menuju kesehatan dan kebahagiaan.Dengan aplikasi ini, Anda dapat dengan mudah mencatat asupan makanan harian, mengatur target kalori,dan melacak aktivitas fisik Anda."
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="31dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:text="Mulai"
        app:layout_constraintBottom_toBottomOf="parent" />

</RelativeLayout>
