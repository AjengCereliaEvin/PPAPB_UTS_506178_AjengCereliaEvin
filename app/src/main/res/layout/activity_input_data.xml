<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStartedActivity"
    android:paddingHorizontal="15dp"
    android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Makan"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/green"/>


                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:layout_gravity="center"
                    android:id="@+id/time_picker_makan"
                    />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalori In"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sarapanInput"
                    android:text="Sarapan :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SarapanInputEdit"
                    android:hint="Jumlah Kalori"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunchInput"
                    android:text="Lunch :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunchInputEdit"
                    android:hint="Jumlah Kalori"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dinnerInput"
                    android:text="Dinner :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dinnerInputEdit"
                    android:hint="Jumlah Kalori"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/snackInput"
                    android:text="Snack/Lainnya :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SnackInputEdit"
                    android:hint="Jumlah Kalori"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Workout"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/green"/>


                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:layout_gravity="center"
                    android:id="@+id/time_picker_workout"
                    />


                <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="Kalori Out"
            android:layout_marginTop="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama_workout"
                    android:text= "Nama Workout :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaWorkoutInput"
                    android:hint="Nama Workout"
                    android:layout_marginTop="8dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/durasi_workout"
                    android:text="Durasi Workout (menit) :  "
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/durasiWorkoutInput"
            android:hint="Durasi Workout (menit)"
            android:layout_marginTop="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:text="Kalori Out"
                    android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kaloriTerbakarInput"
            android:hint="Kalori Terbakar"
            android:layout_marginTop="8dp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:id="@+id/simpanButton"
            android:text="Simpan"
            android:layout_marginTop="100dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:id="@+id/backButton"
            android:text="Kembali ke Home"
            android:layout_marginTop="20dp" />




        </LinearLayout>
</ScrollView>